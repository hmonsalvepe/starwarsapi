{% extends 'base.html.twig' %}

{% block body %}
<div class="swapicontainer">
    <div class="row">
        <div class="col-xs-12 col-md-12">

            <div class="col-xs-12 col-md-10 col-md-offset-1  borderSW alignCenter">
                <img style="height: 60px;" src="{{asset('bundles/app/images/logo_sw.png')}}"/>
            </div>

            <div class="col-xs-12 col-md-10 col-md-offset-1 padding20MarginTop20 normalBorder">

                <div class="col-xs-12 marginTop5">
                    <div class="col-xs-6" ><h3>Title</h3></div>
                    <div class="col-xs-6 borderLeftSW"><h3>{{ filmToShow.title }}</h3></div>
                </div>

                <div class="col-xs-12 marginTop5">
                    <div class="col-xs-6" ><h3>Director</h3></div>
                    <div class="col-xs-6 borderLeftSW"><h3>{{ filmToShow.director }}</h3></div>
                </div>

                <div class="col-xs-12 marginTop5">
                    <div class="col-xs-6" ><h3>Producer</h3></div>
                    <div class="col-xs-6 borderLeftSW"><h3>{{ filmToShow.producer }}</h3></div>
                </div>

                <div class="col-xs-12 marginTop5">
                    <div class="col-xs-6" ><h3>Release date</h3></div>
                    <div class="col-xs-6 borderLeftSW"><h3>{{ filmToShow.release_date }}</h3></div>
                </div>

                <div class="col-xs-12 marginTop5">
                    <div class="col-xs-6" ><h3>Opening crawl</h3></div>
                    <div class="col-xs-6 borderLeftSW"><p>{{ filmToShow.opening_crawl }}</p></div>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}